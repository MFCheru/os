#ifndef RWLock_h
#define RWLock_h
#include <iostream>

class RWLock {
    public:
        RWLock();
        void rlock();
        void wlock();
        void runlock();
        void wunlock();

    private:
	    pthread_mutex_t lock_mutex;
	    pthread_cond_t condition;	
	    bool writer = false;
	    unsigned int readers = 0;

};

#endif
